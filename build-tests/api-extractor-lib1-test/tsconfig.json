// This project is using TypeScript 2, so we can't extend from the rig
{
  "compilerOptions": {
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": ["es5", "scripthost", "es2015.collection", "es2015.promise", "es2015.iterable"],
    "outDir": "lib-commonjs",
    "declarationDir": "lib-dts"
  },
  "include": ["src/**/*.ts"]
}
