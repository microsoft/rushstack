{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "lib-esm",
    "rootDir": "src",

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["node"],

    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["es2020"]
  },
  "include": ["src/**/*.ts"]
}
