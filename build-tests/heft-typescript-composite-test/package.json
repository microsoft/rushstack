    "@rushstack/heft-typescript-plugin": "workspace:*",
    "@types/heft-jest": "1.0.1",
    "@types/jest": "29.2.5",
    "@types/webpack-env": "1.18.0",
    "eslint": "~8.57.0",
    "tslint": "~5.20.1",
    "typescript": "~5.4.2"
  }
}
