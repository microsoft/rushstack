{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../lib",
    "rootDir": "../../../../src",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": [],
    "moduleResolution": "node",

    "module": "esnext",
    "target": "es2022",
    "lib": ["es2022"]
  },
  "include": ["../../../../src/**/*.ts", "../../../../src/**/*.tsx"],
  "exclude": ["../../../../node_modules", "../../../../lib"]
}
