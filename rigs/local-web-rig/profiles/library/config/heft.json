{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",

  "extends": "@rushstack/heft-web-rig/profiles/library/config/heft.json",

  "phasesByName": {
    "build": {
      "cleanFiles": [{ "includeGlobs": ["lib-dts", "lib-esm", "temp/schema-ts"] }],

      "tasksByName": {
        "lint": {
          "taskPlugin": {
            "options": {
              "sarifLogPath": "temp/build/lint/lint.sarif"
            }
          }
        },

        "json-schema-typings": {
          "taskPlugin": {
            "pluginPackage": "@rushstack/heft-json-schema-typings-plugin",
            "pluginName": "json-schema-typings-plugin",
            "options": {
              "generatedTsFolders": ["temp/schema-ts", "lib"]
            }
          }
        }
      }
    },

    "test": {
      "cleanFiles": [{ "includeGlobs": ["coverage"] }]
    }
  }
}
