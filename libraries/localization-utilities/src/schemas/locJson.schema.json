{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Localizable JSON file",

  "patternProperties": {
    "^[A-Za-z_$][0-9A-Za-z_$]*$": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["value"]
    }
  },
  "additionalProperties": false,
  "type": "object"
}
