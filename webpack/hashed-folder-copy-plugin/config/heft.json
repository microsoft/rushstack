{
  "extends": "@rushstack/heft-node-rig/profiles/default/config/heft.json",

  // TODO: Add comments
  "phasesByName": {
    "build": {
      "cleanFiles": [
        {
          "sourcePath": "ambientTypes.d.ts"
        }
      ],

      "tasksByName": {
        "copy-ambient-types": {
          "taskPlugin": {
            "pluginPackage": "@rushstack/heft",
            "pluginName": "copy-files-plugin",
            "options": {
              "copyOperations": [
                {
                  "sourcePath": "./src",
                  "includeGlobs": ["ambientTypes.d.ts"],
                  "destinationFolders": ["."]
                }
              ]
            }
          }
        }
      }
    }
  }
}
